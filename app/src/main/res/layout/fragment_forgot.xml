<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C8AAAAAA"
        android:text="Reset Password"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="@dimen/_8sdp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etL_mail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:hint="Enter Email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            tools:ignore="KeyboardInaccessibleWidget" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.button.MaterialButton
        android:id="@+id/bt_forgot"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="Send Password Rest Link"
        android:layout_below="@id/etL_mail"
        app:cornerRadius="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account, click here to create an account."
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@android:color/black" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_new_account"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Create an Account"
            app:cornerRadius="@dimen/_30sdp"
            android:backgroundTint="@android:color/holo_blue_dark" />
    </LinearLayout>

</RelativeLayout>