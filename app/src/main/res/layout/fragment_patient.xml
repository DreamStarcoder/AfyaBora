<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.PatientFragment"
    >
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Register Account"
        android:textAlignment="center"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp"
        android:background="#4BAAAAAA"
        />
    <ScrollView
       android:padding="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <LinearLayout
         android:id="@+id/layout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/_40sdp"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Name"
             android:textSize="@dimen/_15sdp"
             android:textColor="@android:color/black"
             android:layout_gravity="center"
             android:textStyle="bold"
             />
         <android.support.design.widget.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="@dimen/_200sdp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:layout_marginEnd="16dp"
             app:boxCornerRadiusBottomEnd="5dp"
             app:boxCornerRadiusBottomStart="5dp"
             app:boxCornerRadiusTopEnd="5dp"
             app:boxCornerRadiusTopStart="5dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/editText"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ellipsize="end"
                 android:maxLines="1"
                 tools:ignore="KeyboardInaccessibleWidget" />
         </android.support.design.widget.TextInputLayout>

     </LinearLayout>
     <LinearLayout
         android:id="@+id/layout_two"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/layout"
         android:layout_marginTop="@dimen/_10sdp"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Phone"
             android:textSize="@dimen/_15sdp"
             android:textColor="@android:color/black"
             android:layout_gravity="center"
             android:textStyle="bold"
             />
         <android.support.design.widget.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="@dimen/_200sdp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:layout_marginEnd="16dp"
             app:boxCornerRadiusBottomEnd="5dp"
             app:boxCornerRadiusBottomStart="5dp"
             app:boxCornerRadiusTopEnd="5dp"
             app:boxCornerRadiusTopStart="5dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/et_phone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ellipsize="end"
                 android:maxLines="1"
                 tools:ignore="KeyboardInaccessibleWidget" />
         </android.support.design.widget.TextInputLayout>
     </LinearLayout>
     <LinearLayout
         android:id="@+id/layout_three"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/layout_two"
         android:textAlignment="center"
         android:layout_marginTop="@dimen/_10sdp"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="E-mail"
             android:textSize="@dimen/_15sdp"
             android:textColor="@android:color/black"
             android:layout_gravity="center"
             android:textStyle="bold"
             />
         <android.support.design.widget.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="@dimen/_200sdp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:layout_marginEnd="16dp"
             app:boxCornerRadiusBottomEnd="5dp"
             app:boxCornerRadiusBottomStart="5dp"
             app:boxCornerRadiusTopEnd="5dp"
             app:boxCornerRadiusTopStart="5dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">
             <android.support.design.widget.TextInputEditText
                 android:id="@+id/et_add"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ellipsize="end"
                 android:maxLines="1"
                 android:inputType="textEmailAddress"
                 tools:ignore="KeyboardInaccessibleWidget" />
         </android.support.design.widget.TextInputLayout>
     </LinearLayout>
     <LinearLayout
         android:id="@+id/layout_four"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/_10sdp"
         android:layout_below="@id/layout_three"
         android:layout_marginTop="@dimen/_10sdp"
         android:gravity="left"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Select Address"
             android:textSize="@dimen/_15sdp"

             android:textColor="@android:color/black"
             android:layout_gravity="center"
             android:textStyle="bold"
             />
         <com.toptoche.searchablespinnerlibrary.SearchableSpinner
             android:id="@+id/spinner"
             android:layout_width="@dimen/_150sdp"
             android:layout_height="wrap_content"
             android:background="@android:drawable/btn_dropdown"
             android:spinnerMode="dropdown"

             />
     </LinearLayout>
   <LinearLayout
       android:id="@+id/layout_five"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/layout_four"
       android:layout_marginTop="@dimen/_10sdp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Your date of birth"
           android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
           android:textColor="@android:color/black"
           android:layout_gravity="center"
           android:textStyle="bold"
           />
       <android.support.design.widget.TextInputLayout
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="@dimen/_150sdp"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           app:boxCornerRadiusBottomEnd="5dp"
           app:boxCornerRadiusBottomStart="5dp"
           app:boxCornerRadiusTopEnd="5dp"
           app:boxCornerRadiusTopStart="5dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">
           <android.support.design.widget.TextInputEditText
               android:id="@+id/et_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ellipsize="end"
               android:maxLines="1"
               android:layout_marginRight="@dimen/_10sdp"
               android:elevation="@dimen/_10sdp"
               android:text="pick date"
               android:focusable="false"
               android:textAlignment="center"
               android:backgroundTint="@color/cardview_light_background"
               android:textColor="@android:color/holo_blue_light"
               android:background="@color/design_default_color_primary"
               android:inputType="textEmailAddress"
               tools:ignore="KeyboardInaccessibleWidget" />
       </android.support.design.widget.TextInputLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/layout_five"
        android:layout_marginLeft="@dimen/_50sdp"
        android:orientation="vertical"
        >
        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:inputType="textPassword"
                tools:ignore="KeyboardInaccessibleWidget" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Conform Password"

            app:passwordToggleEnabled="true"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_conform_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:ignore="KeyboardInaccessibleWidget" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_six"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to you find us"
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Facebook"
                /><RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Instagram"
                /><RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On twitter"
                /><RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Google Search"
                /><RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Youtube Ad"
                /><RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On a Friend"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other Platforms"
                />
        </RadioGroup>
        <android.support.design.button.MaterialButton
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1285E1"
            android:textSize="@dimen/_16sdp"
            android:text="Register" />
    </LinearLayout>


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>